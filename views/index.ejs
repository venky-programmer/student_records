<%- include('./partials/header.ejs') %>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-success text-center">Add new student</h2>

                <form method="post">

                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required />
                    </div>
                    <div class="mb-3">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" class="form-control" id="age" name="age" required />
                    </div>
                    <div class="mb-3">
                        <label for="fees" class="form-label">Fees</label>
                        <input type="text" class="form-control" id="fees" name="fees" required />
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

            </div>
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-warning text-center" role="alert">List All student</h2>
                <%# show All Data%>

                    <table class="table table-striped table-hover">
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Name</th>
                            <th scope="col">Age</th>
                            <th scope="col">Fees</th>
                            <th scope="col">Action</th>
                        </tr>
                        <thead>
                        <tbody>

                            <% var i=1 %>
                                <% data.forEach((item)=>{ %>

                                    <tr>
                                        <td>
                                            <%= i++%>
                                        </td>
                                        <td>
                                            <%= item.name%>
                                        </td>
                                        <td>
                                            <%= item.age%>
                                        </td>
                                        <td>
                                            <%= item.fees%>
                                        </td>
                                        <td>
                                            <form action="/student/edit/<%= item._id %>" method="get" class="d-inline">
                                                <button type="submit" class="btn">
                                                    <i class="fas fa-pen-square text-info"></i>
                                                </button>
                                            </form>

                                            <form action="/student/delete/<%= item._id %>" method="post"
                                                class="d-inline">
                                                <button type="submit" class="btn">
                                                    <i class="fas fa-trash-square text-danger"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% })%>

                        </tbody>
                        <tr>

                        </tr>

                        </thead>
                    </table>

            </div>
        </div>
    </div>

    <%- include('./partials/footer.ejs') %>